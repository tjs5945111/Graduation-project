/* component/index/item/index.wxss */
.shop{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.gm{
    width: 220rpx;
    height: 70rpx;
    background: #FF5F19;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
} 
.shop image{
    width: 40rpx;
    height: 35rpx;
}
.item-top .bg{
    width: 220rpx;
    height: 280rpx;
}
.item-top{
    width: 220rpx;
    height: 280rpx;
    overflow: hidden;
    box-shadow: 0px 0px 15px rgb(51, 51, 51);
}
.item-top:hover .item-text{
transition: all 1s;  
transform: translateY(-100%); 
}
.item-text{ 
    font-size: 10px;
    z-index:50;
    background: rgba(245, 239, 239, 0.7);  
}
.item-left{
    margin: 0 10rpx;
}
.price{
    color: rgb(199, 5, 43);
}
.itemtitle{
    font-size: 10px;
    font-weight: bolder;
}
